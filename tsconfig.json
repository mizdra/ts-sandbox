{
  "compilerOptions": {
    /* Basic Options */
    // "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "declaration": false,
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Helper Options */
    "noEmitHelpers": true,
    "importHelpers": true,

    /* Debug Options */
    "sourceMap": true,
    "pretty": true,
    "locale": "ja",
  },
  // "include": ["./src/**/*"],
  // "exclude": ["./node_modules"]
}